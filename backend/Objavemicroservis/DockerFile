FROM maven:3.8.1-ibmjava-8-alpine AS appBuild

WORKDIR /usr/src/Objavemicroservis
COPY . .
RUN ["mvn", "package", "-DskipTests"]

FROM openjdk:8-jdk-alpine AS appRuntime
WORKDIR /media-microservice
COPY --from=appBuild /usr/src/Objavemicroservis/target/Objavemicroservis-0.0.1-SNAPSHOT.jar ./
EXPOSE 7876
CMD java -jar Objavemicroservis-0.0.1-SNAPSHOT.jar